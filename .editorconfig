[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=space
indent_size=4

[{*.ng,*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=tab
tab_width=4

[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_size=2

[*.css]
indent_style=tab
tab_width=4

[{*.js,*.cjs}]
indent_style=space
indent_size=2

[{*.phtml,*.module,*.php,*.php5,*.php4,*.hphp,*.inc}]
indent_style=tab
tab_width=4

[*.twig]
indent_style=tab
tab_width=4

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

[{composer.lock,composer.json}]
indent_style=tab
tab_width=4

